<p id="notice"><%= notice %></p>

<h1>Memes</h1>

<%= render 'Shared/navbar' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <%# <th>Downloads</th> %>
      <th>Price</th>
      <%# <th>Category</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memes.each do |meme| %>
      <tr>
        <td><%= meme.name %></td>
        <td><%= meme.description %></td>
        <%# <td><%= meme.downloads %>
        <td><%= meme.price %></td>
        <%# <td><%= meme.category %>
        <td><%= link_to 'Show', meme %></td>
        <td><%= link_to 'Edit', edit_meme_path(meme) %></td>
        <td><%= link_to 'Destroy', meme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meme', new_meme_path %>

